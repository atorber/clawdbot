page {
  --bg-page: #0f0f1a;
  --bg-card: #1a1a2e;
  --bg-input: #252542;
  --text-primary: #e8e8f0;
  --text-secondary: #9898b0;
  --accent: #6366f1;
  --accent-hover: #818cf8;
  --success: #22c55e;
  --error: #ef4444;
  --border: #2d2d4a;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  background-color: var(--bg-page);
  color: var(--text-primary);
  font-size: 28rpx;
}

.container {
  box-sizing: border-box;
  min-height: 100vh;
  padding: 32rpx;
}

.card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid var(--border);
}

.label {
  color: var(--text-secondary);
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.input {
  background: var(--bg-input);
  border-radius: 16rpx;
  padding: 24rpx;
  color: var(--text-primary);
  border: 1rpx solid var(--border);
}

.input::placeholder {
  color: var(--text-secondary);
}

.btn-primary {
  background: var(--accent);
  color: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  text-align: center;
  font-size: 30rpx;
}

.btn-primary:active {
  background: var(--accent-hover);
}

.btn-secondary {
  background: var(--bg-input);
  color: var(--text-primary);
  border: 1rpx solid var(--border);
  border-radius: 16rpx;
  padding: 28rpx;
  text-align: center;
}

.btn-disabled {
  opacity: 0.5;
}
